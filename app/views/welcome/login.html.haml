.external-login
  = form_for(@resource, as: resource_name, url: session_path(resource_name)) do |f|
    .container
      %span.label Usuario
      %span= f.email_field :email, size: 40
    .container
      %span.label Contraseña
      %span= f.password_field :password
    .container
      %span.label
      %span= f.submit "Iniciar Sesión", class: 'login-submit'

%link{:href => "https://fonts.googleapis.com/css?family=Lato:400,100", :rel => "stylesheet", :type => "text/css"}/
%link{:href => "https://fonts.googleapis.com/css?family=Economica", :rel => "stylesheet", :type => "text/css"}/

:css
  .external-login {
    background: #505961;
    color: #FFFFFF;
    display: block;
    padding: 0 20px;
    width: 250px;
  }
  .external-login form {
    margin-bottom: 0;
  }
  .external-login span {
    display: inline-block;
    padding: .5em 0;
    width: 145px;
  }
  .external-login span.label {
    font-family: 'Lato', Arial, Helvetica;
    width: 100px;
  }
  .external-login input {
    border: 1px solid;
    border-color: #9B9B9B;
    background-color: transparent;
    font-family: 'Economica', Arial, Helvetica;
    color: #C9C9C9;
    font-size: 1em;
    padding: .2em;
    width: 100%;
  }
  .external-login input[type="submit"] {
    border: 1px solid;
    border-color: #FFFFFF;
    border-radius: 50px;
    color: #FFFFFF;
    font-size: 1.2em;
    padding: 5px 10px;
    text-align: center;
    width: 145px;
  }