.panels-view
  .row
    .small-12.columns
      %h2
        = fa_icon "envelope"
        Notificaciones
      .tray.text-center
        = form_for :user_notifications, url: :user_notifications do |f|
          .row
            .large-12.columns
              = f.collection_check_boxes :institution_ids, @institutions, :id, :name, checked: @notifications.pluck(:institution_id) do |b|
                = b.label(class: "check_box") do
                  = b.check_box(class: "check_box")
                  = b.object.name
          .row
            .large-12.columns
              = f.submit "Guardar", class: "button success save"
