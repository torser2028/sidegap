- content_for :head do
  = javascript_include_tag "https://www.google.com/jsapi"
  = wicked_pdf_javascript_include_tag "chartkick"

%h1.report-title Informe legislativo
.right= @report_date

- if !@report_logo.nil?
  .logo= image_tag embed_remote_image(@report_logo, 'image/png')

.panels-view.report.row.nobreak
  .row.section
    .small-12.columns
      %h2
        = fa_icon "tasks"
        Resumen Semana - Monitoreo Normativo
      
      %table.table-border
        %colgroup
          %col
          %col
        %tbody
          - @summary_week.each_with_index do |notice, index|
            %tr
              %td= (index + 1).to_s + '.'
              %td= simple_format notice.body
  
  .row.section
    .small-12.columns
      %h2
        = fa_icon "calendar"
        Resumen Semana – Agenda

      %h3= 'Semana del ' + @last_week.to_s + ' al ' + @today.to_s + ' (semana anterior)'
      %table.table-report
        %colgroup
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
        %thead
          %tr
            %th Fecha
            %th Título Proyecto
            %th Plenaria / Comisión
            %th Núm. Cámara
            %th Núm. Senado
            %th Evento
            %th Asunto
            %th Observaciones
        %tbody
          - @last_agendas.each do |agenda|
            %tr
              %td= agenda.event_at
              %td= simple_format agenda.legislative.title
              %td= agenda.plenary_commission
              %td= agenda.legislative.chamber_number
              %td= agenda.legislative.senate_number
              %td= agenda.event_type
              %td= agenda.body
              %td= agenda.observation

      %h2
        = fa_icon "calendar"
        Otros eventos

      %table.table-report
        %colgroup
          %col{width: "12.5%"}
          %col{width: "20%"}
          %col{width: "20%"}
          %col{width: "27.5%"}
          %col{width: "20%"}
        %thead
          %tr
            %th Fecha
            %th Plenaria / Comisión
            %th Evento
            %th Asunto
            %th Observaciones
        %tbody
          - @events.each do |event|
            %tr
              %td= event.event_at
              %td= event.commission ? event.commission : event.plenary
              %td= event.event_type
              %td= simple_format event.body
              %td= event.observation

  .row.section
    .small-12.columns
      %h3= 'Semana del ' + @today.to_s + ' al ' + @next_week.to_s + ' (semana siguiente)'
      %table.table-report
        %colgroup
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
          %col{width: "12.5%"}
        %thead
          %tr
            %th Fecha
            %th Título Proyecto
            %th Plenaria / Comisión
            %th Núm. Cámara
            %th Núm. Senado
            %th Evento
            %th Asunto
            %th Observaciones
        %tbody
          - @next_agendas.each do |agenda|
            %tr
              %td= agenda.event_at
              %td= simple_format agenda.legislative.title
              %td= agenda.plenary_commission
              %td= agenda.legislative.chamber_number
              %td= agenda.legislative.senate_number
              %td= agenda.event_type
              %td= agenda.body
              %td= agenda.observation

      %h2
        = fa_icon "calendar"
        Otros eventos

      %table.table-report
        %colgroup
          %col{width: "12.5%"}
          %col{width: "20%"}
          %col{width: "20%"}
          %col{width: "27.5%"}
          %col{width: "20%"}
        %thead
          %tr
            %th Fecha
            %th Plenaria / Comisión
            %th Evento
            %th Asunto
            %th Observaciones
        %tbody
          - @events_next_week.each do |event|
            %tr
              %td= event.event_at
              %td= event.commission ? event.commission : event.plenary
              %td= event.event_type
              %td= simple_format event.body
              %td= event.observation

  .row.section
    .small-12.columns
      %h2
        = fa_icon "folder-open"
        Proyectos de Ley en Seguimiento

      %h3 Riesgo Regulatorio
      .row
        .small-4.columns
          %table.table-report
            %colgroup
              %col
              %col
              %col{width: "33%"}
            %thead
              %tr
                %th Riesgo
                %th Cantidad
                %th Acumulado
            %tbody
              - count = 0
              - @legislatives_by_risk.each do |risk|
                - count += risk[1]
                %tr
                  %td= risk[0]
                  %td= risk[1]
                  %td= count
        .small-2.columns
          = wicked_pdf_image_tag 'risk.png'
        .small-6.columns
          #legislative_by_risk
            = column_chart @legislatives_by_risk

  .row.section
    .small-12.columns
      .row
        .small-8.columns
          %h3 Riesgo Regulatorio Alto / Tema
          %table.table-report
            %colgroup
              %col{width: "70%"}
              %col{width: "10%"}
              %col{width: "20%"}
            %thead
              %tr
                %th Tema de Interés
                %th Cantidad
                %th %
            %tbody
              - @legislatives_by_topic_with_risk.each do |topic, amount|
                %tr
                  %td= topic
                  %td= amount
                  %td= number_with_precision((amount / @total_by_topic_with_risk.to_f * 100), precision: 2) + '%'
              %tr
                %td Total
                %td= @total_by_topic_with_risk
                %td 100%

  .row.section
    .small-12.columns
      %h3 Riesgo Regulatorio Alto / Tema / Definición
      %table.table-report
        %colgroup
          %col
          %col
          %col{width: "50%"}
        %thead
          %tr
            %th Riesgo
            %th Tema de interés
            %th Descripción
        %tbody
          - @legislatives.each do |legislative|
            - if legislative[:risk] >= 31
              %tr
                %td= legislative[:risk]
                %td= legislative[:topic]
                %td= legislative[:title]

  .row.section
    .row
      .small-6.columns
        %h3 Proyectos por Cámara de Entrada
        %table.table-report
          %colgroup
            %col
            %col
            %col{width: "33%"}
          %thead
            %tr
              %th Origen
              %th Cantidad
              %th Total
          %tbody
            - @legislatives_by_source.each do |source, amount|
              %tr
                %td= source
                %td= amount
                %td= number_with_precision((amount / @total_by_source.to_f * 100), precision: 2) + '%'
            %tr
              %td Total
              %td= @total_by_source
              %td 100%
    
    %h3 Proyectos por Estado
    .row
      .small-6.columns
        %table.table-report
          %colgroup
            %col{width: "60%"}
            %col
            %col{width: "20%"}
          %thead
            %tr
              %th Estado
              %th Cantidad
              %th %
          %tbody
            - @legislatives_by_status.each do |status, amount|
              %tr
                %td= status
                %td= amount
                %td= number_with_precision((amount / @total_by_status.to_f * 100), precision: 2) + '%'
            %tr
              %td Total
              %td= @total_by_status
              %td 100%
      .small-6.columns
        #legislative_by_status
          = pie_chart(@legislatives_by_status, width: "600px")

  .row.section
    %h3 Proyectos por Tema
    .row
      .small-6.columns
        #legislative_by_topic
          = pie_chart(@legislatives_by_topic, width: "600px")
      .small-6.columns
        %table.table-report
          %colgroup
            %col{width: "60%"}
            %col
            %col{width: "20%"}
          %thead
            %tr
              %th Tema de Interés
              %th Cantidad
              %th %
          %tbody
            - @legislatives_by_topic.each do |topic, amount|
              %tr
                %td= topic
                %td= amount
                %td= number_with_precision((amount / @total_by_topic.to_f * 100), precision: 2) + '%'
            %tr
              %td Total
              %td= @total_by_topic
              %td 100%

  .row.section
    .small-12.columns
      %h2
        = fa_icon "users"
        Stakeholders de Mayor Riesgo

      .row
        .small-6.columns
          %h3 Autores
          %table.table-report.table-simple
            %colgroup
              %col{width: "20%"}
              %col
              %col{width: "20%"}
            %thead
              %tr
                %th Proyectos
                %th Nombre
                %th Riesgo Promedio
            %tbody
              - @authors.each do |name, stakeholder|
                %tr
                  %td= stakeholder[:legislatives]
                  %td= name
                  %td= stakeholder[:risk]

        .small-6.columns
          %h3 Ponentes
          %table.table-report.table-simple
            %colgroup
              %col{width: "20%"}
              %col
              %col{width: "20%"}
            %thead
              %tr
                %th Proyectos
                %th Nombre
                %th Riesgo Promedio
            %tbody
              - @speakers.each do |name, stakeholder|
                %tr
                  %td= stakeholder[:legislatives]
                  %td= name
                  %td= stakeholder[:risk]
