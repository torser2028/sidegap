.panels-view
  .row
    .small-12.columns
      %h2
        = fa_icon "calendar"
        Agenda de Plenarias y Comisiones
      .tray.calendar
        = search_form_for @q, url: url_for, remote: true do |f|
          .row
            .large-12.columns
              .alert-box.info.radius{"data-alert" => ""}
                La Agenda muestra los eventos de los próximos 7 días a partir de la fecha
                %a.close{href: "#"} &times;
          .row.filter
            .large-1.medium-1.small-3.columns
              %label
                Fecha:
            .large-3.medium-5.small-9.columns
              .date
                = f.search_field :event_at_gteq, class: "fecha span2", size: "16"
            .large-8.medium-offset-0.medium-6.small-offset-3.small-9.columns
              %input.button.success.fullwidth.search{type: "submit", value: "Buscar"}
              .button.secondary.fullwidth.quit
                %a{href: url_for}
                  Quitar Filtros
        %table
          %colgroup
            %col
            %col
            %col
            %col
            %col{width: "40%"}
            %col{width: "25%"}
          %thead
            %tr
              %th Fecha Evento
              %th Hora Evento
              %th Num Camara
              %th Num Senado
              %th Proyecto
              %th Evento
          %tbody.js_agendas
            = render @agendas
  .row
    .small-12.columns
      %h2
        = fa_icon "check-square-o"
        Otros Eventos
      .tray.events
        %table
          %colgroup
            %col{width: "100"}
            %col
            %col
            %col
            %col
          %thead
            %tr
              %th
                Fecha
              %th
                Hora
              %th
                Evento
              %th
                Tipo de Evento
              %th
                Lugar
          %tbody
            - @events.each do |event|
              %tr
                %td.num= event.event_at
                %td.num= l event.time, format: :simple
                %td.desc= simple_format event.body
                %td= event.event_type
                %td= event.commission.present? ? event.commission : event.plenary