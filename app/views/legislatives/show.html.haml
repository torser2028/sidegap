- content_for :menu do
  = render 'menu'
.panels-view
  .row
    .small-12.columns
      %h2
        = fa_icon "star"
        Detalles del proyecto
      .pryctDtl
        .row.cntnr.white
          .large-4.columns
            %button
              = fa_icon "arrow-left"
              %a{href: legislatives_path}
                Consultar Proyectos
            - if current_user.following? @legislative
              %button.secondary
                = fa_icon "eye-slash"
                %a{ href: unfollow_legislative_path(@legislative) }
                  No seguir
            - else
              %button.success
                = fa_icon "eye"
                %a{ href: follow_legislative_path(@legislative) }
                  Seguir
          .large-4.columns
          .large-4.columns.actions
            %a#downloads{"data-reveal-id" => "filesPnl"}
              = fa_icon "download"
              %span
                Descargar Archivos
            %a{ href: legislative_path(@legislative, format: :pdf), target: "_blank" }
              = fa_icon "file-pdf-o"
              %span
                Exportar a PDF
        .row.cntnr
          .large-12.columns
            .row
              .large-2.columns.labels
                %label
                  Título
              .large-10.columns
                %span.txtdesc
                  = @legislative.title
            .row
              .large-2.columns.labels
                %label
                  Origen
              .large-2.columns
                %span
                  = @legislative.source
              .large-2.columns.labels
                %label
                  Fecha Comisión Senado
              .large-6.columns
                %span
                  = @legislative.senate_commission_at
            .row
              .large-2.columns.labels
                %label
                  Número en Cámara
              .large-2.columns
                %span
                  = @legislative.chamber_number
              .large-2.columns.labels
                %label
                  Fecha Plenaria Senado
              .large-6.columns
                %span
                  = @legislative.senate_plenary_at
            .row
              .large-2.columns.labels
                %label
                  Número Senado
              .large-2.columns
                %span
                  = @legislative.senate_number
              .large-2.columns.labels
                %label
                  Tema interés
              .large-6.columns
                %span
                  = @legislative.topic
            .row
              .large-2.columns.labels
                %label
                  Comisión
              .large-2.columns
                %span
                  = @legislative.commission
              .large-2.columns.labels
                %label
                  Estatus
              .large-6.columns
                %span
                  = @legislative.status
            .row
              .large-2.columns.labels
                %label 
                  Fecha de Radicación
              .large-2.columns
                %span
                  = @legislative.filing_at
              .large-2.columns.labels
                %label
                  Fecha Plenaria Cámara
              .large-6.columns
                %span
                  = @legislative.chamber_plenary_at
            .row
              .large-2.columns.labels
                %label
                  Fecha Comisión Cámara
              .large-2.columns
                %span
                  = @legislative.chamber_commission_at
              .large-2.columns.labels
                %label
                  Tipo de Ley
              .large-6.columns
                %span
                  = @legislative.law
            .row
              .large-2.columns.labels
                %label
                  Probabilidad
              .large-2.columns
                %span
                  = @legislative.probability
              .large-8.columns
                %span
            = form_for @legislative_user do |f|
              .row.white
                .large-2.columns.labels
                  %label
                    Impacto
                .large-2.columns
                  = f.select :impact, options_for_select(LegislativeUser::IMPACT, @legislative_user.impact), include_blank: true
                .large-8.columns
                  %span.ghost
                    \-
              .row.white
                .large-2.columns.labels
                  %label
                    Comentario
                .large-6.columns
                  = f.text_area :comment, class: "comments", rows: 6
                  = f.hidden_field :legislative_id, value: @legislative.id
                  %button.success{type: "submit"}
                    = fa_icon "save"
                    Guardar
                .large-4.columns
                  %span.ghost
                    \-
        .row
          .large-6.columns
            %h3
              = fa_icon "users"
              Autores
            .tray.autors
              %table
                %thead
                  %tr
                    %th
                      Nombre de Autor
                %tbody
                  - @authors.each do |author|
                    %tr
                      %td
                        = link_to author.name, stakeholder_legislatives_path(author)
          .large-6.columns
            %h3
              = fa_icon "users"
              Ponentes
            .tray.autors
              %table
                %thead
                  %tr
                    %th
                      Nombre de Ponente
                %tbody
                  - @speakers.each do |speaker|
                    %tr
                      %td
                        = link_to speaker.name, stakeholder_legislatives_path(speaker)
- content_for :modal do
  .reveal-modal.filesPnl.legislatives#filesPnl{"data-reveal" => "", "aria-labelledby"=>"modalTitle", "aria-hidden"=>"true", role: "dialog"}

    %a.close-reveal-modal{"aria-label" => "Close"}
      &#215;
    .row.panels-view
      .large-12.columns
        %h2
          = fa_icon "files-o"
          Archivos
    .row.panels-view
      .large-12.columns
        .tray.autors
          %table
            %colgroup
              %col
              %col.date{width: "30%"}
            %thead
              %tr
                %th
                  Título
                %th
                  Fecha de Publicación
                %th
                  
            %tbody
              - @legislative.legislative_attachments.each do |la|
                %tr
                  %td
                    = la.title
                  %td
                    = la.published_at
                  %td
                    %a.down{href: la.attachment.url, target: "_blank"}
                      = fa_icon "download"
                      Descargar