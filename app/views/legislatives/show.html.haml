.legislatives.panels-view
  %h1
    = fa_icon "legal"
    Rama Legislativa
  .row
    .small-12.columns
      %h2
        = fa_icon "star"
        Detalles del proyecto
        / %span{style: "color:red"}
        /   (*)
      .pryctDtl
        .row.cntnr.white
          .large-4.columns
            %button
              = fa_icon "arrow-left"
              %a{href: legislatives_path}
                Consultar Proyectos
            %button.secondary
              = fa_icon "eye-slash"
              No seguir
          .large-4.columns
          .large-4.columns.actions
            %a#downloads{"data-reveal-id" => "filesPnl"}
              = fa_icon "download"
              %span
                Descargar Archivos
            %a
              = fa_icon "file-pdf-o"
              %span
                Exportar a PDF
        .row.cntnr
          .large-12.columns
            .row
              .large-2.columns.labels
                %label
                  Título
              .large-10.columns
                %span.txtdesc
                  = @legislative.title
            .row
              .large-2.columns.labels
                %label
                  Origen
              .large-2.columns
                %span
                  = @legislative.source
              .large-2.columns.labels
                %label
                  Fecha Comisión Senado
              .large-6.columns
                %span
                  = @legislative.senate_commission_at
            .row
              .large-2.columns.labels
                %label
                  Número en Cámara
              .large-2.columns
                %span
                  = @legislative.chamber_number
              .large-2.columns.labels
                %label
                  Fecha Plenaria Senado
              .large-6.columns
                %span
                  = @legislative.senate_plenary_at
            .row
              .large-2.columns.labels
                %label
                  Número Senado
              .large-2.columns
                %span
                  = @legislative.senate_number
              .large-2.columns.labels
                %label
                  Tema interés
              .large-6.columns
                %span
                  = @legislative.topic
            .row
              .large-2.columns.labels
                %label
                  Comisión
              .large-2.columns
                %span
                  = @legislative.commission
              .large-2.columns.labels
                %label
                  Estatus
              .large-6.columns
                %span
                  = @legislative.status
            .row
              .large-2.columns.labels
                %label 
