              .large-2.columns
                %span
                  = @legislative.filing_at
              .large-2.columns.labels
                %label
                  Fecha Plenaria Cámara
              .large-6.columns
                %span
                  = @legislative.chamber_plenary_at
            .row
              .large-2.columns.labels
                %label
                  Fecha Comisión Cámara
              .large-2.columns
                %span
                  = @legislative.chamber_commission_at
              .large-2.columns.labels
                %label
                  Tipo de Ley
              .large-6.columns
                %span
                  = @legislative.law
            .row
              .large-2.columns.labels
                %label
                  Probabilidad
              .large-2.columns
                %span
                  = @legislative.probability
              .large-8.columns
                %span
            .row.white
              .large-2.columns.labels
                %label
                  Impacto
              .large-2.columns
                %select
                  %option
                    Ninguno
                  %option
                    1
                  %option
                    2
                  %option
                    3
                  %option
                    4
                  %option
                    5
                  %option
                    6
              .large-8.columns
                %span.ghost
