- content_for :menu do
  = render 'menu'
.panels-view
  .row
    .small-12.columns
      %h2
        = fa_icon "users"
        Consultar Congresistas
      .tray.rep
        .row
          .small-12.columns
            %ul.tabs{"data-tab" => "", :role => "tablist"}
              %li.tab-title.active{:role => "presentational"}
                %a{"aria-selected" => "true", :controls => "basicPanel", :href => "#basicPanel", :role => "tab", :tabindex => "0"} 
                  = fa_icon "search"
                  Buscador
            .tabs-content
              %section#basicPanel.content.active{"aria-hidden" => "false", :role => "tabpanel"}
                .row
                  .large-4.medium-6.columns
                    %label
                      Nombre
                    %input{type: "text"}
                  .large-1.medium-2.columns
                    %label
                      Comisión
                    %select
                      %option
                        I
                      %option
                        II
                      %option
                        III
                      %option
                        IV
                      %option
                        V
                      %option
                        VI
                      %option
                        VII
                  .large-3.medium-4.columns
                    %label
                      Región
                    %select
                      %option
                        Opción Uno
                      %option
                        Opción Dos
                      %option
                        Opción Tres
                      %option
                        Opción Cuatro
                      %option
                        Opción Cinco
                      %option
                        Opción Seis
                      %option
                        Opción Siete
                  .large-offset-0.large-2.medium-offset-3.medium-3.columns
                    %label
                      %span.ghost
                        \_
                    %button.success.fullwidth{href: "#", type: "submit"}
                      = fa_icon "search"
                      Buscar
                  .large-offset-0.large-2.medium-3.end.columns
                    %label
                      %span.ghost
                        \_
                    %button.secondary.fullwidth{type: "button"}
                      %a{href: stakeholders_legislatives_path}
                        \× Quitar Filtros
        %table
          %colgroup
            %col
            %col
            %col
            %col
            %col{width: "120"}
          %thead
            %tr
              %th
                Nombre
              %th
                Institución
              %th
                Partido
              %th
                Comisión
              %th
                Región
              %th
                Opciones
          %tbody
            = render @stakeholders
