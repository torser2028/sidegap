.panels-view.report
  .row.section.nobreak
    .small-12.columns
      %h2
        = fa_icon "tasks"
        Resumen Semana - Monitoreo Normativo

      %table.table-border
        %colgroup
          %col
          %col
        %tbody
          - @summary_week.each_with_index do |notice, index|
            %tr
              %td= (index + 1).to_s + '.'
              %td= simple_format notice.body

  .row.section.nobreak
    .small-12.columns
      %h2
        = fa_icon "calendar"
        Resumen Semana – Agenda

      %h3= 'Semana del ' + @last_week.to_s + ' al ' + @today.to_s + ' (semana anterior)'
      %table.table-report
        %thead
          %tr
            %th Fecha
            %th Título Proyecto
            %th Plenaria / Comisión
            %th Evento
            %th Asunto
            %th Observaciones
        %tbody
          - @last_agendas.each do |agenda|
            %tr
              %td=l agenda.event_at, format: :custom
              %td
                %p
                  %b Núm. Cámara:
                  = agenda.legislative.chamber_number
                %p
                  %b Núm. Senado:
                  = agenda.legislative.senate_number
                = simple_format agenda.legislative.title
              %td= agenda.plenary_commission
              %td= agenda.event_type
              %td= agenda.body
              %td= agenda.observation

