.changePswd
  %h2
    = fa_icon "key"
    Cambiar Contrase単a
  .row
    .small-12.columns
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .row
          .medium-3.small-4.columns.labels
            .field
              = f.label :password, "Contrase単a nueva"
          .medium-9.small-8.columns
            = f.password_field :password, autofocus: true, autocomplete: "off"
        .row
          .medium-3.small-4.columns.labels
            .field
              = f.label :password_confirmation, "Confirme contrase単a"
          .medium-9.small-8.columns
            = f.password_field :password_confirmation, autocomplete: "off"
        .row
          .medium-3.small-4.columns
          .medium-9.small-8.columns
            .actions
              = f.submit "Cambiar contrase単a", class: "button success"
              = render "devise/shared/links"
            