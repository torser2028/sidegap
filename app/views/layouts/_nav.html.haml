.fixed.hidden-pdf
  %nav.tab-bar.top-bar{"data-topbar" => "", :role => "navigation"}
    %section.top-bar-section
      .row
        %ul.right
          %li.has-dropdown.not-click
            = link_to current_user.name, "javascript:void(0);"
            %ul.dropdown{:role => "menu"}
              - if current_user.has_role? :admin
                %li
                  = link_to "Administración", admin_root_path
              %li
                = link_to 'Editar Perfil', edit_user_registration_path
              %li
                = link_to "Cerrar Sesión", destroy_user_session_path, method: :delete
        %ul.left
          %li.menuTg
            %a.left-off-canvas-toggle.menuToggle
              = fa_stacked_icon "bars", base: "square-o"
              %span.txtMenu
                Menu
        %ul.left.branch
          = render 'menu' unless %w(welcome sessions registrations).include? controller.controller_name
