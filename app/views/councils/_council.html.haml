%tr
  %td.num
    = council.number
  %td.desc
    %p
      = council.title
    - if council.warning
      %span.round.label.linear.urgent
        = fa_icon "exclamation-circle"
        Mensaje de urgencia
  %td.num
    = ldate council.filing_at
  %td.desc
    = council.topic
  %td.actions
    - if @downvoted.present? && !@downvoted.include?(council)
      %a.more{href: council_path(council)}
        = fa_icon "arrow-circle-right"
        %span
          Ver
      - if @followed.present? && @followed.include?(council)
        %a.follow{href: unfollow_council_path(council)}
          = fa_icon "eye-slash"
          %span
            Dejar de Seguir
      - else
        %a.follow{href: follow_council_path(council)}
          = fa_icon "eye"
          %span
            Seguir
    - if @followed.present? && !@followed.include?(council)
      - if @downvoted.present? && @downvoted.include?(council)
        %a.return{href: like_council_path(council)}
          = fa_icon "reply"
          %span
            Reestablecer
      - else
        %a.archive{href: dislike_council_path(council)}
          = fa_icon "trash"
          %span
            Papelera
