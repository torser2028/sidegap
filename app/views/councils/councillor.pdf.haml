.panels-view
  %h2
    Perfil Concejal
  .person
    - if @councillor.avatar_url
      - if !@councillor.avatar_url.nil?
        - if embed_remote_image(@councillor.avatar_url, 'image/png')
          %figure.avatar
            = image_tag embed_remote_image(@councillor.avatar_url, 'image/png')
            %p
              = @councillor.name
    %dl
      %dt
        %label Nombre
      %dd
        = @councillor.name
      %dt
        %label Corporación Institucional
      %dd
        Concejo de Bogotá
      %dt
        %label Cargo
      %dd
        = @councillor.job
      %dt
        %label Partido
      %dd
        = @councillor.political_party
      %dt
        %label Comisión
      %dd
        = @councillor.commission
      %dt
        %label Dirección
      %dd
        = @councillor.address
      %dt
        %label Teléfono del Trabajo
      %dd
        = @councillor.phone
      %dt
        %label Oficina
      %dd
        = @councillor.office
      %dt
        %label E-mail
      %dd
        = @councillor.email
      %dt
        %label Fuente de Información
      %dd
        = @councillor.source
      %dt
        %label Perfil
      %dd
        .columns{:align => "justify"}
          %p
            = simple_format @councillor.info
.div
  .tray.autors
    %h2
      Autor en
    %table
      %colgroup
        %col
        %col
        %col
        %col
        %col
      %thead
        %tr
          %th
            Número
          %th
            Comisión
          %th
            Título
          %th
            Fecha de Radicación
      %tbody
        - @councils_as_author.each do |council|
          %tr
            %td
              = council.number
            %td
              = council.commission
            %td.desc
              = council.title
            %td
              = council.filing_at
  .tray.autors
    %h2
      Ponente en
    %table
      %colgroup
        %col
        %col
        %col
        %col
        %col{width: "120"}
      %thead
        %tr
          %th
            Número
          %th
            Comisión
          %th
            Título
          %th
            Fecha de Radicación
      %tbody
        - @councils_as_speaker.each do |council|
          %tr
            %td
              = council.number
            %td
              = council.commission
            %td.desc
              = council.title
            %td
              = council.filing_at
